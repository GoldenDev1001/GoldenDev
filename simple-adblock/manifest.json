{
  "manifest_version": 3,
  "name": "YouTube Smart Adblocker",
  "short_name": "YT Smart Adblocker",
  "description": "Blocks/hides YouTube ad elements, auto-skips ads, mutes ads and counts blocked ads.",
  "version": "1.4.0",
  "version_name": "0.0.1",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "background",
    "webRequest",
    "cookies",
    "idle",
    "tabGroups",
    "browsingData",
    "privacy"
  ],
  "incognito": "split",
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Smart Adblocker",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}